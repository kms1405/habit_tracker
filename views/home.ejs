<div>
  <div class="container">
    <form action="/" method="get">
      <select class="form-select" name="day_of_week" aria-label="Default select example">
        <% for (i in heading) {%>
          <% if (select_value==i) {%>
            <option value=<%=i %> selected><%=heading[i] %>
            </option>
            <%} else { %>
              <option value=<%=i %> ><%=heading[i] %>
              </option>
              <%} %>
                <%}%>
      </select>
      <button type="submit" class="btn btn-secondary mb-3">Go</button>
    </form>
  </div>


  <form action="/task/update" method="post">
    
    <% for (var i=0; i < posts.length; i++) {%>
      <div class="container text-center">
        <div class="row alert alert-info">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="Done" id="flexCheckDefault" name=<%- posts[i]._id %>>

          </div>
          <div class="col" name="name">
            <%= posts[i].name %>
              <br>
              <small style="font-size: smaller;color: red;">task</small>
          </div>
          <div class="col" name="comment">
            <%= posts[i].comment %>
              <br>
              <small style="font-size: smaller;color: red;">comment</small>
          </div>

          <div class="col">
            <%= posts[i].status %>
              <br>
              <small style="font-size: smaller;color: red;">status</small>
          </div>
          <div class="col">
            <%= posts[i].time %>
              <br>
              <small style="font-size: smaller;color: red;">task</small>
          </div>
        </div>

      </div>

      <%} %>
</div>
<div class="container">
  <div class="col-auto">
    <button type="submit" class="btn btn-warning mb-3" name="mark_done" >Mark as done</button>
    <button type="submit" class="btn btn-warning mb-3" name="mark_not_done">Mark as not done</button>
    <button type="submit" class="btn btn-warning mb-3" name="none">Mark as none</button>
  </div>

</div>



</form>
</div>